<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/facebook_blue"
        />
    <ImageView
        android:id="@+id/settingsButton"
        android:src="@drawable/baseline_settings_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:focusable="true"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/premiumButton"
        android:src="@drawable/premium"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:focusable="true"
        android:clickable="true"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp"
        android:layout_marginBottom="40dp"
        >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/lookingButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:icon="@drawable/gender"
        app:iconSize="24dp"
        app:iconTint="@color/holo_blue_light"
        android:gravity="center"
        android:text="Looking For"
        android:textSize="12dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@id/locationButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/left_corner_round"
        app:backgroundTint="@color/white"
        app:layout_constraintWidth_percent="0.5"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/locationButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:icon="@drawable/location"
        app:iconTint="@color/holo_blue_light"
        app:iconSize="24dp"
        android:text="Location"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:background="@drawable/right_corner_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@id/lookingButton"
        app:layout_constraintWidth_percent="0.5"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>